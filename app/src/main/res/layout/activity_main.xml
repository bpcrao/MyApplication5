<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nano Apps"
        android:id="@+id/nanoAppsText"
        android:layout_alignBottom="@+id/nanoAppsText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button"
        android:layout_below="@+id/nanoAppsText"
        android:layout_marginTop="60dp"
        android:background="#ffe53935"
        android:elegantTextHeight="true"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:onClick="sendMessageSpotify"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Football Scores App"
        android:id="@+id/button"
        android:layout_below="@+id/nanoAppsText"
        android:layout_marginTop="120dp"
        android:background="#ffe53935"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:onClick="sendMessageScores"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/button"
        android:layout_below="@+id/nanoAppsText"
        android:layout_marginTop="180dp"
        android:background="#ffe53935"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:onClick="sendMessageLibrary"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button"
        android:layout_below="@+id/nanoAppsText"
        android:layout_marginTop="240dp"
        android:background="#ffe53935"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:onClick="sendMessageBuildBig"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button"
        android:layout_below="@+id/nanoAppsText"
        android:layout_marginTop="300dp"
        android:background="#ffe53935"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:onClick="sendMessageXYZ"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/button"
        android:layout_below="@+id/nanoAppsText"
        android:layout_marginTop="360dp"
        android:background="#ffe53935"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:onClick="sendMessageCapstone"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_above="@+id/button"
        android:layout_toLeftOf="@+id/nanoAppsText"
        android:layout_toStartOf="@+id/nanoAppsText" />

</RelativeLayout>
